      <!-- Title -->
      <h2 class="text-3xl font-semibold mb-6 text-center text-gradient">
        Mot de passe oublié
      </h2>
      
      <!-- Description Text -->
      <p class="mb-6 text-gray-600 text-center text-sm">
        Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
      </p>
      
      <!-- Form -->
      <form action="/forgot-password" method="POST">
        <div class="mb-6">
          <label for="email" class="block text-gray-700 font-semibold mb-2">
            Email <span class="text-red-500">*</span>
          </label>
          <input 
            type="email" 
            id="email" 
            name="email"
            required 
            class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-300 transition-all duration-300 hover:shadow-lg"
            placeholder="votre@email.com"
          />
        </div>
        
        <button 
          type="submit" 
          class="w-full btn-gradient py-3 px-4 
          border border-gray-600 
          text-gray-600 
          hover:bg-gray-700 hover:text-white 
          focus:bg-gray-700 focus:text-white 
          rounded-lg font-semibold hover-glow focus:outline-none focus:ring transition duration-300 ease-in-out"
          onclick="showToast();"
        >
          Envoyer le lien de réinitialisation
        </button>
      </form>
      
      <!-- Redirect link -->
      <div class="mt-6 text-center">
        <a href="/login" class="text-blue-600 hover:underline font-medium transition duration-300 hover:text-blue-800">
          Retour à la page de connexion
        </a>  
      </div>

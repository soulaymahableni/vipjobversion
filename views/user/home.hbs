<script>
    const jobImages = [
        'https://images.unsplash.com/photo-1552664730-d307ca884978',
        'https://img.freepik.com/photos-premium/concept-reseautage-ressources-humaines-personnes_31965-4439.jpg',
    ];

    // Préchargement des images
    jobImages.forEach(img => {
        new Image().src = img;
    });

    let currentImageIndex = 0;
    const mainImage = document.getElementById('mainJobImage');
    const secondaryImage = document.getElementById('secondaryJobImage');

    function switchImages() {
        // Transition croisée
        mainImage.style.opacity = 0;
        secondaryImage.style.opacity = 1;
        
        setTimeout(() => {
            // Échange des positions après la transition
            [mainImage.src, secondaryImage.src] = [secondaryImage.src, mainImage.src];
            mainImage.style.opacity = 1;
            secondaryImage.style.opacity = 0;
        }, 1000);
    }

    // Changement toutes les 6 secondes
    setInterval(switchImages, 6000);
</script>              
